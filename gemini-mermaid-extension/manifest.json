{
  "manifest_version": 3,
  "name": "Gemini Mermaid Renderer",
  "version": "1.0.0",
  "description": "自动将 Gemini 对话中的 Mermaid 代码渲染成可视化图表",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "renderer.html",
        "lib/mermaid.min.js"
      ],
      "matches": [
        "https://gemini.google.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}